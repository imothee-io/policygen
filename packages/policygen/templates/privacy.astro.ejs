---
<% if (config.output.astroLayout) { %>
import Layout from "<%- config.output.astroLayout.path %>";
<% } %>
---

<% if (config.output.astroLayout) { %>
<Layout<% if (config.output.astroLayout.props) { %> <%- Object.entries(config.output.astroLayout.props).map(([k, v]) => `${k}=${typeof v === 'string' ? `"${v}"` : `{${JSON.stringify(v)}}`}`).join(' ') %><% } %>>
<% } else { %>
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= t('privacy_policy.title') %> | <%= config.entity.name %></title>
</head>
<body>
<% } %>

<div id="policygen-privacy-policy" class="<%= css.container %>">
  <h1 class="<%= css.heading %>"><%= t('privacy_policy.title') %></h1>
  <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.last_updated', { updated: updated }) %></h3>

  <!-- Privacy notice -->
  <section class="<%= css.section %>">
    <p class="<%= css.paragraph %>">
      <%- t('privacy_policy.privacy_notice', { entity_name: config.entity.name, entity_website: config.entity.website, link_class: css.link }) %>
    </p>
    <ul class="<%= css.list %>">
      <% config.privacy.platforms.forEach(function(platform) { %>
        <% if (platform == 'web') { %>
          <li><%- t('privacy_policy.privacy_notice_web', { entity_website: config.entity.website, link_class: css.link }) %></li>
        <% } else if (platform == 'mobile') { %>
          <li><%= t('privacy_policy.privacy_notice_mobile') %></li>
        <% } %>
      <% }); %>
      <li><%= t('privacy_policy.privacy_notice_other') %></li>
    </ul>
    <p class="<%= css.paragraph %>">
      <%- t('privacy_policy.privacy_questions', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %>
    </p>
  </section>

  <!-- Summary -->
  <section class="<%= css.section %>">
    <h2 class="<%= css.subheading %>"><%= t('privacy_policy.summary.title') %></h2>
    <p class="<%= css.paragraph %>">
      <%= t('privacy_policy.summary.text') %>
    </p>
    <p class="<%= css.paragraph %>">
      <span class="<%= css.bold %>"><%= t('privacy_policy.summary.personal_information_question') %></span>
      <% if (config.privacy.personalInformation.length === 0) { %>
        <%= t('privacy_policy.summary.personal_information_no') %>
      <% } else { %>
        <%= t('privacy_policy.summary.personal_information_yes') %>
        <a href="#personal-information" class="<%= css.link %>"><%= t('privacy_policy.summary.personal_information_link') %></a>
      <% } %>
    </p>
    <p class="<%= css.paragraph %>">
      <span class="<%= css.bold %>"><%= t('privacy_policy.summary.sensitive_information_question') %></span>
      <% if (config.privacy.sensitiveInformation.length === 0) { %>
        <%= t('privacy_policy.summary.sensitive_information_no') %>
      <% } else { %>
        <%= t('privacy_policy.summary.sensitive_information_yes') %>
        <a href="#sensitive-information" class="<%= css.link %>"><%= t('privacy_policy.summary.sensitive_information_link') %></a>
      <% } %>
    </p>
    <p class="<%= css.paragraph %>">
      <span class="<%= css.bold %>"><%= t('privacy_policy.summary.third_party_information_question') %></span>
      <% if (config.privacy.thirdPartyData.length === 0) { %>
        <%= t('privacy_policy.summary.third_party_information_no') %>
      <% } else { %>
        <%= t('privacy_policy.summary.third_party_information_yes') %>
        <a href="#third-party-data" class="<%= css.link %>"><%= t('privacy_policy.summary.third_party_information_link') %></a>
      <% } %>
    </p>
    <p class="<%= css.paragraph %>">
      <span class="<%= css.bold %>"><%= t('privacy_policy.summary.third_party_sharing_question') %></span>
      <% if (!config.privacy.thirdPartyDisclosure && !config.privacy.thirdPartySharing) { %>
        <%= t('privacy_policy.summary.third_party_sharing_no') %>
      <% } else { %>
        <%= t('privacy_policy.summary.third_party_sharing_yes') %>
        <a href="#third-party-sharing" class="<%= css.link %>"><%= t('privacy_policy.summary.third_party_sharing_link') %></a>
      <% } %>
    </p>
    <p class="<%= css.paragraph %>">
      <span class="<%= css.bold %>"><%= t('privacy_policy.summary.process_information_question') %></span>
      <%= t('privacy_policy.summary.process_information') %>
      <a href="#processing" class="<%= css.link %>"><%= t('privacy_policy.summary.process_information_link') %></a>
    </p>
    <% if (config.privacy.securityMeasures) { %>
      <p class="<%= css.paragraph %>">
        <span class="<%= css.bold %>"><%= t('privacy_policy.summary.security_measures_question') %></span>
        <%= t('privacy_policy.summary.security_measures') %>
        <a href="#security" class="<%= css.link %>"><%= t('privacy_policy.summary.security_measures_link') %></a>
      </p>
    <% } %>
    <p class="<%= css.paragraph %>">
      <span class="<%= css.bold %>"><%= t('privacy_policy.summary.rights_question') %></span>
      <% if (config.privacy.privacyPage) { %>
        <%- t('privacy_policy.summary.rights_link', { privacy_page: config.privacy.privacyPage, privacy_email: config.privacy.privacyEmail, link_class: css.link }) %>
      <% } else { %>
        <%- t('privacy_policy.summary.rights', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %>
      <% } %>
    </p>
  </section>

  <!-- Policy Sections -->
  <section class="<%= css.section %>">
    <h2 class="<%= css.subheading %>"><%= t('privacy_policy.sections.title') %></h2>
    <ol class="<%= css.ol_class %>">
      <li><a href="#section-collected-information" class="<%= css.link %>"><%= t('privacy_policy.sections.information_we_collect') %></a></li>
      <li><a href="#section-use" class="<%= css.link %>"><%= t('privacy_policy.sections.how_we_use_information') %></a></li>
      <li><a href="#legal-basis" class="<%= css.link %>"><%= t('privacy_policy.sections.legal_basis') %></a></li>
      <li><a href="#section-third-party-sharing" class="<%= css.link %>"><%= t('privacy_policy.sections.third_party_sharing') %></a></li>
      <% if (config.privacy.webTracking) { %>
        <li><a href="#section-web-tracking" class="<%= css.link %>"><%= t('privacy_policy.sections.web_tracking') %></a></li>
      <% } %>
      <% if (config.privacy.cookieConsent) { %>
        <li><a href="#section-cookie-consent" class="<%= css.link %>"><%= t('privacy_policy.sections.cookie_consent') %></a></li>
      <% } %>
      <% if (config.privacy.securityMeasures) { %>
        <li><a href="#section-security" class="<%= css.link %>"><%= t('privacy_policy.sections.security') %></a></li>
      <% } %>
      <% if (config.privacy.browserExtension) { %>
        <li><a href="#section-browser-extension" class="<%= css.link %>"><%= t('privacy_policy.sections.browser_extension') %></a></li>
      <% } %>
      <li><a href="#section-data-retention" class="<%= css.link %>"><%= t('privacy_policy.sections.data_retention') %></a></li>
      <% if (config.privacy.dataBreachNotification) { %>
        <li><a href="#section-data-breach" class="<%= css.link %>"><%= t('privacy_policy.sections.data_breach') %></a></li>
      <% } %>
      <% if (config.privacy.crossBorderTransfers) { %>
        <li><a href="#section-cross-border-transfers" class="<%= css.link %>"><%= t('privacy_policy.sections.cross_border_transfers') %></a></li>
      <% } %>
      <% if (config.privacy.usStatePrivacyLaws) { %>
        <li><a href="#section-us-state-privacy-laws" class="<%= css.link %>"><%= t('privacy_policy.sections.us_state_privacy_laws') %></a></li>
      <% } %>
      <% if (config.privacy.cpraCompliance) { %>
        <li><a href="#section-cpra" class="<%= css.link %>"><%= t('privacy_policy.sections.cpra') %></a></li>
      <% } %>
      <% if (config.privacy.vcdpaCompliance) { %>
        <li><a href="#section-vcdpa" class="<%= css.link %>"><%= t('privacy_policy.sections.vcdpa') %></a></li>
      <% } %>
      <% if (config.privacy.coppaCompliance) { %>
        <li><a href="#section-coppa" class="<%= css.link %>"><%= t('privacy_policy.sections.coppa') %></a></li>
      <% } %>
      <li><a href="#section-privacy-rights" class="<%= css.link %>"><%= t('privacy_policy.sections.privacy_rights') %></a></li>
      <li><a href="#section-privacy-policy-changes" class="<%= css.link %>"><%= t('privacy_policy.sections.policy_changes') %></a></li>
      <li><a href="#section-contact" class="<%= css.link %>"><%= t('privacy_policy.sections.contact') %></a></li>
    </ol>
  </section>

  <!-- Collected Information -->
  <section id="section-collected-information" class="<%= css.section %>">
    <h2 class="<%= css.subheading %>"><%= t('privacy_policy.sections.information_we_collect') %></h2>
    <!-- Disclosed -->
    <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.information_we_collect.disclosed.heading') %></h3>
    <!-- Personal -->
    <% if (config.privacy.personalInformation.length === 0) { %>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.information_we_collect.disclosed.no_personal_information') %>
      </p>
    <% } else { %>
      <p id="personal-information" class="<%= css.paragraph %>">
        <%= t('privacy_policy.information_we_collect.disclosed.personal_information') %>
      </p>
      <ul class="<%= css.list %>">
      <% config.privacy.personalInformation.forEach(function(info) { %>
        <li><%= t(`privacy_policy.information_we_collect.disclosed.${info}`, info) %></li>
      <% }); %>
      </ul>
    <% } %>
    <!-- Sensitive -->
    <% if (config.privacy.sensitiveInformation.length === 0) { %>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.information_we_collect.disclosed.no_sensitive_information') %>
      </p>
    <% } else { %>
      <p id="sensitive-information" class="<%= css.paragraph %>">
        <%= t('privacy_policy.information_we_collect.disclosed.sensitive_information') %>
      </p>
      <ul class="<%= css.list %>">
      <% config.privacy.sensitiveInformation.forEach(function(info) { %>
        <li><%= t(`privacy_policy.information_we_collect.disclosed.${info}`, info) %></li>
      <% }); %>
      </ul>
    <% } %>
    <!-- Payment Data -->
    <% if (config.privacy.paymentData) { %>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.information_we_collect.disclosed.payment_data') %>
      </p>
      <% if (config.privacy.paymentProcessors.length > 0) { %>
        <p class="<%= css.paragraph %>">
          <%= t("privacy_policy.information_we_collect.disclosed.payment_processor") %>
        </p>
        <ul class="<%= css.list %>">
        <% config.privacy.paymentProcessors.forEach(function(processor) { %>
          <li><a href="<%= processor %>" class="<%= css.link %>"><%= processor %></a></li>
        <% }); %>
        </ul>
      <% } %>
    <% } %>
    <!-- Social Login -->
    <% if (config.privacy.socialSignIn) { %>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.information_we_collect.disclosed.social_sign_in') %>
      </p>
    <% } %>

    <!-- Derived Collected -->
    <% if (config.privacy.appUsageData || config.privacy.webTracking) { %>
      <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.information_we_collect.derived.heading') %></h3>
      <!-- App Usage Data -->
      <% if (config.privacy.appUsageData) { %>
        <p class="<%= css.paragraph %>">
          <%= t('privacy_policy.information_we_collect.derived.app_usage_data') %>
        </p>
      <% } %>
      <!-- Web Tracking -->
      <% if (config.privacy.webTracking) { %>
        <p class="<%= css.paragraph %>">
          <%= t('privacy_policy.information_we_collect.derived.cookies') %>
        </p>
        <p class="<%= css.paragraph %>">
          <%= t('privacy_policy.information_we_collect.derived.web_tracking') %>
        </p>
      <% } %>
    <% } %>

    <!-- Third Party -->
    <% if (config.privacy.thirdPartyData.length > 0) { %>
      <h3 id="third-party-data" class="<%= css.subheading %>"><%= t('privacy_policy.information_we_collect.third_party.heading') %></h3>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.information_we_collect.third_party.data') %>
      </p>
      <ul class="<%= css.list %>">
      <% config.privacy.thirdPartyData.forEach(function(info) { %>
        <li><%= t(`privacy_policy.information_we_collect.third_party.${info}`, info) %></li>
      <% }); %>
      </ul>
    <% } %>
  </section>

  <!-- Use of Information -->
  <section id="section-use" class="<%= css.section %>">
    <h2 class="<%= css.subheading %>"><%= t('privacy_policy.sections.how_we_use_information') %></h2>
    <p class="<%= css.paragraph %>">
      <%= t('privacy_policy.how_we_use_information.usage') %>
    </p>
    <% if (config.privacy.serviceRequirements.length > 0) { %>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.how_we_use_information.specifics') %>
      </p>
      <ul class="<%= css.list %>">
        <% config.privacy.serviceRequirements.forEach(function(requirement) { %>
          <li><%= t(`privacy_policy.how_we_use_information.${requirement}`, requirement) %></li>
        <% }); %>
      </ul>
    <% } %>
  </section>

  <!-- Legal Basis -->
  <section id="legal-basis" class="<%= css.section %>">
    <h2 class="<%= css.subheading %>"><%= t('privacy_policy.sections.legal_basis') %></h2>
    <p class="<%= css.paragraph %>">
      <%= t('privacy_policy.legal_basis.text') %>
    </p>
    <ul class="<%= css.list %>">
      <li><%= t('privacy_policy.legal_basis.consent') %></li>
      <li><%= t('privacy_policy.legal_basis.contract') %></li>
      <li><%= t('privacy_policy.legal_basis.legal') %></li>
      <li><%= t('privacy_policy.legal_basis.vital_interests') %></li>
      <li><%= t('privacy_policy.legal_basis.public_interest') %></li>
      <li>
        <%= t('privacy_policy.legal_basis.legitimate_interests') %>
        <ul class="<%= css.list %>">
          <% config.privacy.legalBasis.forEach(function(basis) { %>
            <li><%= t(`privacy_policy.legal_basis.${basis}`, basis) %></li>
          <% }); %>
        </ul>
      </li>
    </ul>
  </section>

  <!-- Third Party Sharing -->
  <section id="section-third-party-sharing" class="<%= css.section %>">
    <h2 class="<%= css.subheading %>"><%= t('privacy_policy.sections.third_party_sharing') %></h2>
    <% if (config.privacy.thirdPartyDisclosure) { %>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.third_party_sharing.disclosure') %>
      </p>
      <% if (config.privacy.thirdPartyDisclosureEntities.length > 0) { %>
        <p class="<%= css.paragraph %>">
          <%= t('privacy_policy.third_party_sharing.disclosure_entities') %>
        </p>
        <ul class="<%= css.list %>">
        <% config.privacy.thirdPartyDisclosureEntities.forEach(function(disclosure) { %>
          <li><%= t(`privacy_policy.third_party_sharing.disclosure.${disclosure}`, disclosure) %></li>
        <% }); %>
        </ul>
      <% } %>
    <% } %>
    <p class="<%= css.paragraph %>">
      <%= t('privacy_policy.third_party_sharing.business_transfers') %>
    </p>
  </section>

  <!-- Web Tracking -->
  <% if (config.privacy.webTracking || config.privacy.thirdPartyAnalytics) { %>
    <section id="section-web-tracking" class="<%= css.section %>">
      <h2 class="<%= css.subheading %>"><%= t('privacy_policy.sections.web_tracking') %></h2>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.web_tracking.text') %>
      </p>
      <% if (config.privacy.webTracking) { %>
        <p class="<%= css.paragraph %>">
          <%= t('privacy_policy.web_tracking.cookies') %>
        </p>
        <p class="<%= css.paragraph %>">
          <%= t('privacy_policy.web_tracking.web_beacons') %>
        </p>
      <% } %>
      <% if (config.privacy.thirdPartyAnalytics) { %>
        <p class="<%= css.paragraph %>">
          <%= t('privacy_policy.web_tracking.analytics') %>
        </p>
      <% } %>
    </section>
  <% } %>

  <!-- Cookie Consent -->
  <% if (config.privacy.cookieConsent) { %>
    <section id="section-cookie-consent" class="<%= css.section %>">
      <h2 class="<%= css.subheading %>"><%= t('privacy_policy.cookie_consent.heading') %></h2>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.cookie_consent.text') %>
      </p>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.cookie_consent.what_are_cookies') %>
      </p>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.cookie_consent.consent_mechanism') %>
      </p>
      <% if (config.privacy.cookieConsentProvider) { %>
        <p class="<%= css.paragraph %>">
          <%= t('privacy_policy.cookie_consent.consent_provider', { provider: config.privacy.cookieConsentProvider }) %>
        </p>
      <% } %>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.cookie_consent.preference_management') %>
      </p>
      <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.cookie_consent.essential_cookies') %></h3>
      <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.cookie_consent.analytics_cookies') %></h3>
      <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.cookie_consent.marketing_cookies') %></h3>
    </section>
  <% } %>

  <!-- Security Measures -->
  <% if (config.privacy.securityMeasures) { %>
    <section id="section-security" class="<%= css.section %>">
      <h2 class="<%= css.subheading %>"><%= t('privacy_policy.sections.security') %></h2>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.security.text') %>
      </p>
    </section>
  <% } %>

  <!-- Browser Extension -->
  <% if (config.privacy.browserExtension) { %>
    <section id="section-browser-extension" class="<%= css.section %>">
      <h2 class="<%= css.subheading %>"><%= t('privacy_policy.sections.browser_extension') %></h2>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.browser_extension.intro', { name: config.privacy.browserExtension.name }) %>
      </p>

      <% if (config.privacy.browserExtension.dataCollected && config.privacy.browserExtension.dataCollected.length > 0) { %>
        <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.browser_extension.data_collection_heading') %></h3>
        <ul class="<%= css.list %>">
          <% config.privacy.browserExtension.dataCollected.forEach(function(dataType) { %>
            <li><%= t(`privacy_policy.browser_extension.data_types.${dataType}`, dataType) %></li>
          <% }); %>
        </ul>
      <% } %>

      <% if (config.privacy.browserExtension.permissions && config.privacy.browserExtension.permissions.length > 0) { %>
        <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.browser_extension.permissions_heading') %></h3>
        <p class="<%= css.paragraph %>">
          <%= t('privacy_policy.browser_extension.permissions_intro') %>
        </p>
        <ul class="<%= css.list %>">
          <% config.privacy.browserExtension.permissions.forEach(function(permission) { %>
            <li><%= t(`privacy_policy.browser_extension.permissions.${permission}`, permission) %></li>
          <% }); %>
        </ul>
      <% } %>

      <% if (config.privacy.browserExtension.hostPermissions && config.privacy.browserExtension.hostPermissions.length > 0) { %>
        <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.browser_extension.host_permissions_heading') %></h3>
        <p class="<%= css.paragraph %>">
          <%= t('privacy_policy.browser_extension.host_permissions_intro') %>
        </p>
        <ul class="<%= css.list %>">
          <% config.privacy.browserExtension.hostPermissions.forEach(function(host) { %>
            <% if (host === '<all_urls>') { %>
              <li><%= t('privacy_policy.browser_extension.host_permissions_all_urls') %></li>
            <% } else { %>
              <li><%= host %></li>
            <% } %>
          <% }); %>
        </ul>
      <% } %>

      <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.browser_extension.data_handling_heading') %></h3>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.browser_extension.data_handling') %>
      </p>
      <% if (config.privacy.browserExtension.dataSentTo) { %>
        <p class="<%= css.paragraph %>">
          <%= t('privacy_policy.browser_extension.data_handling_sent', { destination: config.privacy.browserExtension.dataSentTo }) %>
        </p>
      <% } %>
      <% if (config.privacy.browserExtension.runsLocally) { %>
        <p class="<%= css.paragraph %>">
          <%= t('privacy_policy.browser_extension.data_handling_local') %>
        </p>
      <% } %>

      <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.browser_extension.data_storage_heading') %></h3>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.browser_extension.data_storage_local') %>
      </p>
      <% if (config.privacy.browserExtension.dataSentTo) { %>
        <p class="<%= css.paragraph %>">
          <%= t('privacy_policy.browser_extension.data_storage_server') %>
        </p>
      <% } %>

      <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.browser_extension.data_sharing_heading') %></h3>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.browser_extension.data_sharing') %>
      </p>

      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.browser_extension.no_tracking') %>
      </p>

      <% if (config.privacy.browserExtension.storeListingUrl) { %>
        <p class="<%= css.paragraph %>">
          <%- t('privacy_policy.browser_extension.store_listing', { url: config.privacy.browserExtension.storeListingUrl, link_class: css.link }) %>
        </p>
      <% } %>
    </section>
  <% } %>

  <!-- Data Retention -->
  <section id="section-data-retention" class="<%= css.section %>">
    <h2 class="<%= css.subheading %>"><%= t('privacy_policy.sections.data_retention') %></h2>
    <p class="<%= css.paragraph %>">
      <%= t('privacy_policy.data_retention.text') %>
    </p>
    <p class="<%= css.paragraph %>">
      <% if (config.privacy.dataRetentionPeriod) { %>
        <%= t('privacy_policy.data_retention.duration_custom', { duration: config.privacy.dataRetentionPeriod }) %>
      <% } else { %>
        <%= t('privacy_policy.data_retention.duration_default') %>
      <% } %>
    </p>
    <p class="<%= css.paragraph %>">
      <%= t('privacy_policy.data_retention.deletion') %>
    </p>
  </section>

  <!-- Data Breach Notification -->
  <% if (config.privacy.dataBreachNotification) { %>
    <section id="section-data-breach" class="<%= css.section %>">
      <h2 class="<%= css.subheading %>"><%= t('privacy_policy.data_breach.heading') %></h2>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.data_breach.text') %>
      </p>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.data_breach.notification_process') %>
      </p>
      <% if (config.privacy.dataBreachTimeframe) { %>
        <p class="<%= css.paragraph %>">
          <%= t('privacy_policy.data_breach.notification_timeframe', { timeframe: config.privacy.dataBreachTimeframe }) %>
        </p>
      <% } %>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.data_breach.notification_content') %>
      </p>
      <p class="<%= css.paragraph %>">
        <%- t('privacy_policy.data_breach.contact', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %>
      </p>
    </section>
  <% } %>

  <!-- Cross-Border Data Transfers -->
  <% if (config.privacy.crossBorderTransfers) { %>
    <section id="section-cross-border-transfers" class="<%= css.section %>">
      <h2 class="<%= css.subheading %>"><%= t('privacy_policy.cross_border_transfers.heading') %></h2>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.cross_border_transfers.text') %>
      </p>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.cross_border_transfers.safeguards') %>
      </p>
      <% if (config.privacy.transferMechanisms && config.privacy.transferMechanisms.length > 0) { %>
        <ul class="<%= css.list %>">
          <% config.privacy.transferMechanisms.forEach(function(mechanism) { %>
            <li><%= t(`privacy_policy.cross_border_transfers.${mechanism}`) %></li>
          <% }); %>
        </ul>
      <% } %>
    </section>
  <% } %>

  <!-- US State Privacy Laws -->
  <% if (config.privacy.usStatePrivacyLaws) { %>
    <section id="section-us-state-privacy-laws" class="<%= css.section %>">
      <h2 class="<%= css.subheading %>"><%= t('privacy_policy.sections.us_state_privacy_laws') %></h2>

      <!-- California -->
      <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.us_state_privacy_laws.california.heading') %></h3>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.us_state_privacy_laws.california.text') %>
      </p>
      <ul class="<%= css.list %>">
        <li><%- t('privacy_policy.us_state_privacy_laws.california.right_to_know', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %></li>
        <li><%- t('privacy_policy.us_state_privacy_laws.california.right_to_delete', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %></li>
        <li><%- t('privacy_policy.us_state_privacy_laws.california.right_to_opt_out', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %></li>
      </ul>
      <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.us_state_privacy_laws.california.do_not_track_heading') %></h3>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.us_state_privacy_laws.california.do_not_track') %>
      </p>
      <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.us_state_privacy_laws.california.shine_the_light_heading') %></h3>
      <p class="<%= css.paragraph %>">
        <%- t('privacy_policy.us_state_privacy_laws.california.shine_the_light', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %>
      </p>
      <h3 class="<%= css.tertiary %>"><%= t('privacy_policy.us_state_privacy_laws.california.minors_heading') %></h3>
      <p class="<%= css.paragraph %>">
        <%- t('privacy_policy.us_state_privacy_laws.california.minors', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %>
      </p>
    </section>
  <% } %>

  <!-- CPRA (California Privacy Rights Act) -->
  <% if (config.privacy.cpraCompliance) { %>
    <section id="section-cpra" class="<%= css.section %>">
      <h2 class="<%= css.subheading %>"><%= t('privacy_policy.us_state_privacy_laws.cpra.heading') %></h2>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.us_state_privacy_laws.cpra.text') %>
      </p>
      <ul class="<%= css.list %>">
        <li><%- t('privacy_policy.us_state_privacy_laws.cpra.right_to_correct', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %></li>
        <li><%- t('privacy_policy.us_state_privacy_laws.cpra.right_to_limit', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %></li>
        <li><%- t('privacy_policy.us_state_privacy_laws.cpra.right_to_opt_out_automated', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %></li>
      </ul>
    </section>
  <% } %>

  <!-- VCDPA (Virginia Consumer Data Protection Act) -->
  <% if (config.privacy.vcdpaCompliance) { %>
    <section id="section-vcdpa" class="<%= css.section %>">
      <h2 class="<%= css.subheading %>"><%= t('privacy_policy.us_state_privacy_laws.vcdpa.heading') %></h2>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.us_state_privacy_laws.vcdpa.text') %>
      </p>
      <ul class="<%= css.list %>">
        <li><%- t('privacy_policy.us_state_privacy_laws.vcdpa.right_to_access', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %></li>
        <li><%- t('privacy_policy.us_state_privacy_laws.vcdpa.right_to_correct', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %></li>
        <li><%- t('privacy_policy.us_state_privacy_laws.vcdpa.right_to_delete', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %></li>
        <li><%- t('privacy_policy.us_state_privacy_laws.vcdpa.right_to_portability', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %></li>
        <li><%- t('privacy_policy.us_state_privacy_laws.vcdpa.right_to_opt_out', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %></li>
      </ul>
      <p class="<%= css.paragraph %>">
        <%- t('privacy_policy.us_state_privacy_laws.vcdpa.appeal', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %>
      </p>
    </section>
  <% } %>

  <!-- COPPA (Children's Privacy) -->
  <% if (config.privacy.coppaCompliance) { %>
    <section id="section-coppa" class="<%= css.section %>">
      <h2 class="<%= css.subheading %>"><%= t('privacy_policy.coppa.heading') %></h2>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.coppa.text', { min_age: config.privacy.childrenMinAge || 13 }) %>
      </p>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.coppa.no_collection', { min_age: config.privacy.childrenMinAge || 13 }) %>
      </p>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.coppa.parental_consent', { min_age: config.privacy.childrenMinAge || 13 }) %>
      </p>
      <p class="<%= css.paragraph %>">
        <%- t('privacy_policy.coppa.parental_rights', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %>
      </p>
    </section>
  <% } %>

  <!-- Privacy Rights -->
  <section id="section-privacy-rights" class="<%= css.section %>">
    <h2 class="<%= css.subheading %>"><%= t('privacy_policy.sections.privacy_rights') %></h2>
    <p class="<%= css.paragraph %>">
      <%= t('privacy_policy.privacy_rights.text') %>
    </p>
    <% if (config.privacy.privacyPage) { %>
      <p class="<%= css.paragraph %>">
        <%- t('privacy_policy.privacy_rights.access_page', { privacy_page: config.privacy.privacyPage, privacy_email: config.privacy.privacyEmail, link_class: css.link }) %>
      </p>
    <% } else { %>
      <p class="<%= css.paragraph %>">
        <%- t('privacy_policy.privacy_rights.access_email', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %>
      </p>
    <% } %>
    <p class="<%= css.paragraph %>">
      <%- t('privacy_policy.privacy_rights.objection', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %>
    </p>
  </section>

  <!-- Privacy Policy Changes -->
  <section id="section-privacy-policy-changes" class="<%= css.section %>">
    <h2 class="<%= css.subheading %>"><%= t('privacy_policy.sections.policy_changes') %></h2>
    <p class="<%= css.paragraph %>">
      <%= t('privacy_policy.policy_changes.text') %>
    </p>
  </section>

  <!-- Contact -->
  <section id="section-contact" class="<%= css.section %>">
    <h2 class="<%= css.subheading %>"><%= t('privacy_policy.sections.contact') %></h2>
    <p class="<%= css.paragraph %>">
      <%- t('privacy_policy.contact.text', { privacy_email: config.privacy.privacyEmail, link_class: css.link }) %>
    </p>
    <p class="<%= css.paragraph %>">
      <%= config.entity.name %>
    </p>
    <% if (config.entity.address) { %>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.contact.address', { entity_address: config.entity.address }) %>
      </p>
    <% } %>
    <% if (config.privacy.dpo) { %>
      <p class="<%= css.paragraph %>">
        <%= t('privacy_policy.contact.dpo', { dpo_name: config.privacy.dpoName }) %>
      </p>
      <p>
        <%- t('privacy_policy.contact.dpo_email', { dpo_email: config.privacy.dpoEmail, link_class: css.link }) %>
      </p>
      <p>
        <%= t('privacy_policy.contact.dpo_phone', { dpo_phone: config.privacy.dpoPhone }) %>
      </p>
    <% } %>
  </section>
</div>

