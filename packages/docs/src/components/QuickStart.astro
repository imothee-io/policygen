---
const steps = [
  {
    number: "1",
    title: "Install PolicyGen",
    description: "Add PolicyGen to your project as a dev dependency.",
    command: "npm install --save-dev policygen",
  },
  {
    number: "2",
    title: "Initialize Config",
    description:
      "Run the interactive wizard to create your policygen.json config file.",
    command: "npx policygen init",
  },
  {
    number: "3",
    title: "Generate Policies",
    description:
      "Generate your privacy policy and terms of service from your config.",
    command: "npx policygen generate",
  },
];

const exampleConfig = `{
  "$schema": "https://policygen.xyz/schemas/0.6/schema.json",
  "output": {
    "fileType": "html",
    "cssFramework": "tailwind",
    "locales": ["en"],
    "privacyFilePath": "./privacy.html",
    "termsFilePath": "./terms.html"
  },
  "entity": {
    "name": "Acme Corp",
    "website": "https://acme.com",
    "address": "123 Main St, San Francisco, CA"
  },
  "privacy": {
    "privacyEmail": "privacy@acme.com",
    "platforms": ["web", "mobile"],
    "locations": ["us", "eu"],
    "personalInformation": ["name", "email"],
    "securityMeasures": true,
    "usStatePrivacyLaws": true
  },
  "terms": {
    "supportEmail": "support@acme.com",
    "userAccounts": true,
    "governingLaw": "California",
    "disputeResolution": "arbitration"
  }
}`;
---

<section class="border-t border-border bg-bg-secondary px-4 py-20 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="text-center">
      <h2 class="text-3xl font-bold sm:text-4xl">
        Up and running in
        <span class="bg-gradient-to-r from-teal to-purple bg-clip-text text-transparent">
          three steps
        </span>
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-text-muted">
        Generate production-ready policy pages in minutes.
      </p>
    </div>

    <div class="mt-16 grid gap-12 lg:grid-cols-2">
      <!-- Steps -->
      <div class="flex flex-col gap-8">
        {
          steps.map((step) => (
            <div class="flex gap-4">
              <div class="flex h-8 w-8 shrink-0 items-center justify-center rounded-full bg-purple/20 text-sm font-bold text-purple-light">
                {step.number}
              </div>
              <div class="flex-1">
                <h3 class="mb-1 font-semibold text-text">{step.title}</h3>
                <p class="mb-3 text-sm text-text-muted">{step.description}</p>
                <div class="inline-flex items-center rounded-md border border-border bg-bg px-3 py-1.5">
                  <span class="mr-2 text-text-muted select-none">$</span>
                  <code class="font-mono text-sm text-teal-light">
                    {step.command}
                  </code>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <!-- Code example -->
      <div class="rounded-xl border border-border bg-bg p-1">
        <div class="flex items-center gap-2 px-4 py-2">
          <div class="h-3 w-3 rounded-full bg-red-500/60"></div>
          <div class="h-3 w-3 rounded-full bg-yellow-500/60"></div>
          <div class="h-3 w-3 rounded-full bg-green-500/60"></div>
          <span class="ml-2 text-xs text-text-muted">policygen.json</span>
        </div>
        <pre
          class="overflow-x-auto rounded-lg bg-bg-card p-4 text-sm leading-relaxed"><code class="font-mono text-text-muted">{exampleConfig}</code></pre>
      </div>
    </div>
  </div>
</section>
