{
	"name": "policygen",
	"description": "A privacy and terms of service policy generator for your website or app",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/imothee-io/policygen.git"
	},
	"keywords": [
		"privacy",
		"tos"
	],
	"author": "imothee.xyz",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/imothee-io/policygen/issues"
	},
	"homepage": "https://github.com/imothee-io/policygen#readme",
	"packageManager": "pnpm@10.28.2",
	"scripts": {
		"build:docs": "pnpm --filter docs build",
		"build:policygen": "pnpm --filter policygen build",
		"dev:docs": "pnpm --filter docs dev",
		"test:policygen": "pnpm --filter policygen test",
		"lint": "biome check packages/",
		"lint:fix": "biome check --write packages/"
	}
}
